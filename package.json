{
    "name": "rtvsc",
    "displayName": "RTVSC",
    "description": "R Tool For Visual Studio Code",
    "version": "0.0.1",
    "publisher": "a",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "main": "./out/src/extension",
    "contributes":{
        "commands": [{
            "commands": "rtvsc.create.rterm",
            "title": "RTVSC: Create R term"
        }],
        "languages": [
            {
                "id": "r",
                "extentions": [
                    ".r", 
                    ".rhistory", 
                    ".rprofile", 
                    ".rt" 
                ],
                "ariases": [
                    "R",
                    "r"
                ]
            }
        ],
        "configration": {
            "type": "object",
            "title": "RTVSC configration",
            "properties": {
                "rtvsc.rterm.windows": {
                    "type": "string",
                    "default": "C:\\Program Files\\Microsoft\\MRO\\R-3.2.5",
                    "description": "R terms path."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}