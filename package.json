{
  "name": "r",
  "displayName": "R",
  "description": "Support for R language(run,snippet, lint,R documantation,R Markdown)",
  "version": "0.2.5",
  "author": "Yuki Ueda",
  "license": "SEE LICENSE IN LICENSE",
  "publisher": "Ikuyadeu",
  "icon": "images/Rlogo.svg",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ikuyadeu/vscode-R"
  },
  "bugs": {
    "url": "https://github.com/Ikuyadeu/vscode-R/issues"
  },
  "categories": [
    "Languages",
    "Snippets",
    "Linters",
    "Other"
  ],
  "keywords": [
    "R",
    "R language",
    "R documantation",
    "R Markdown",
    "lintr"
  ],
  "engines": {
    "vscode": "^1.11.2"
  },
  "activationEvents": [
    "onCommand:r.createRterm",
    "onCommand:r.runSource",
    "onCommand:r.runSelected",
    "onCommand:r.createGitignore",
    "onCommand:r.lintr",
    "onCommand:r.installLintr"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "title": "Create R terminal",
        "category": "R",
        "command": "r.createRterm"
      },
      {
        "title": "Run Source",
        "category": "R",
        "command": "r.runSource"
      },
      {
        "title": "Run Selected",
        "category": "R",
        "command": "r.runSelected"
      },
      {
        "title": "Create gitignore",
        "category": "R",
        "command": "r.createGitignore"
      },
      {
        "title": "lintr",
        "category": "R",
        "command": "r.lintr"
      },
      {
        "title": "install lintr",
        "category": "R",
        "command": "r.installLintr"
      }
    ],
    "languages": [
      {
        "id": "r",
        "extentions": [
          ".r",
          ".rhistory",
          ".rprofile",
          ".rt"
        ],
        "ariases": [
          "R",
          "r"
        ]
      },
      {
        "id": "rd",
        "extensions": [
          ".rd"
        ],
        "aliases": [
          "R documantation",
          "r documantation"
        ],
        "configuration": "./rd-configuration.json"
      },
      {
        "id": "rmd",
        "extensions": [
          ".rmd"
        ],
        "aliases": [
          "R Markdown",
          "r markdown"
        ]
      }
    ],
    "snippets": [
      {
        "language": "r",
        "path": "./snippets/r-snippets.json"
      },
      {
        "language": "rd",
        "path": "./snippets/r-snippets.json"
      },
      {
        "language": "rmd",
        "path": "./snippets/markdown.json"
      }
    ],
    "grammars": [
      {
        "language": "rd",
        "scopeName": "text.tex.latex.rd",
        "path": "./syntax/Rd (R Documentation).tmLanguage"
      },
      {
        "language": "rmd",
        "scopeName": "text.html.markdown.redcarpet",
        "path": "./syntax/Markdown Redcarpet.tmLanguage"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "r",
      "properties": {
        "r.rterm.windows": {
          "type": "string",
          "default": "C:\\Program Files\\R\\R-3.3.3\\bin\\x64\\R.exe",
          "description": "R.exe path for windows"
        },
        "r.rterm.mac": {
          "type": "string",
          "default": "/usr/local/bin/R",
          "description": "R path for Mac OS X"
        },
        "r.rterm.linux": {
          "type": "string",
          "default": "/usr/bin/R",
          "description": "R path for Linux"
        },
        "r.rterm.option": {
          "type":"array",
          "default": [
            
          ],
          "description": "R command line options (i.e: --vanilla)"
        },
        "r.source.encoding": {
          "type": "string",
          "default": "UTF-8",
          "description": "An optional encoding to pass to R when executing the file, i.e. 'source(FILE, encoding=ENCODING)'"
        },
        "r.lintr.linters": {
          "type": "string",
          "default": "default_linters",
          "description": " list of linter functions"
        },
        "r.lintr.cache": {
          "type": "boolean",
          "default": true,
          "description": "toggle caching of lint results"
        },
        "r.lintr.executable": {
          "type": "string",
          "default": "",
          "description": "R executable path for lintr"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^2.3.3",
    "typescript": "^2.2.2",
    "vscode": "^1.1.0"
  },
  "dependencies": {
    "fs": "0.0.1-security",
    "path": "^0.12.7",
    "tslint": "^5.2.0",
    "vscode-languageserver": "^3.2.1"
  }
}
