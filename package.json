{
    "name": "rtvsc",
    "displayName": "RTVSC",
    "description": "R Tools For Visual Studio Code",
    "version": "0.0.1",
    "publisher": "Ikuyadeu",
    "categories": [
        "Other",
        "Languages"
    ],
    "engines": {
        "vscode": "^1.5.0"
    },
    "activationEvents": [
        "onCommand:rtvsc.createRterm",
        "onCommand:rtvsc.runR"
    ],
    "main": "./out/src/extension",
    "contributes":{
        "commands": [{
            "title": "Create R term",
            "category": "RTVSC",
            "command": "rtvsc.createRterm"
        },
        {
            "title": "Run .R",
            "category": "RTVSC",
            "command": "rtvsc.runR"
        }],
        "languages": [
            {
                "id": "r",
                "extentions": [
                    ".r", 
                    ".rhistory", 
                    ".rprofile", 
                    ".rt" 
                ],
                "ariases": [
                    "R",
                    "r"
                ]
            }
        ],
        "configuration": {
            "type": "object",
            "title": "RTVSC",
            "properties": {
                "rtvsc.rterm.windows": {
                    "type": "string",
                    "default": "C:\\Program Files\\Microsoft\\MRO\\R-3.2.5\\bin\\x64\\Rterm.exe",
                    "description": "R terms path for windows."
                },
                "rtvsc.rterm.mac": {
                    "type": "string",
                    "default": "/usr/local/bin/R",
                    "description": "R terms path for Mac OS X."
                },
                "rtvsc.rterm.linux": {
                    "type": "string",
                    "default": "/usr/bin/R",
                    "description": "R terms path for Linux."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}