{
  "name": "r",
  "displayName": "R",
  "description": "Support for R language(R doc, R md, exec, snippets)",
  "version": "0.1.2",
  "publisher": "Ikuyadeu",
  "icon": "images/icon.png",
  "repository": "https://github.com/Ikuyadeu/vscode-R",
  "categories": [
    "Other",
    "Languages",
    "Snippets"
  ],
  "engines": {
    "vscode": "^1.11.2"
  },
  "activationEvents": [
    "onCommand:r.createRterm",
    "onCommand:r.runR",
    "onCommand:r.createGitignore"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "title": "Create R terminal",
        "category": "R",
        "command": "r.createRterm"
      },
      {
        "title": "Run R",
        "category": "R",
        "command": "r.runR"
      },
      {
        "title": "Create gitignore",
        "category": "R",
        "command": "r.createGitignore"
      }
    ],
    "languages": [
      {
        "id": "r",
        "extentions": [
          ".r",
          ".rhistory",
          ".rprofile",
          ".rt"
        ],
        "ariases": [
          "R",
          "r"
        ]
      },
      {
        "id": "rd",
        "extensions": [
          ".rd"
        ],
        "aliases": [
          "R documantation",
          "r documantation"
        ],
        "configuration": "./rd-configuration.json"
      },
      {
        "id": "rmd",
        "extensions": [
          ".rmd"
        ],
        "aliases": [
          "R Markdown",
          "r markdown"
        ]
      }
    ],
    "snippets": [
      {
        "language": "r",
        "path": "./snippets/r-snippets.json"
      },
      {
        "language": "rd",
        "path": "./snippets/r-snippets.json"
      },
      {
        "language": "rmd",
        "path": "./snippets/markdown.json"
      }
    ],
    "grammars": [
      {
        "language": "rd",
        "scopeName": "text.tex.latex.rd",
        "path": "./syntax/Rd (R Documentation).tmLanguage"
      },
      {
        "language": "rmd",
        "scopeName": "text.html.markdown.redcarpet",
        "path": "./syntax/Markdown Redcarpet.tmLanguage"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "r",
      "properties": {
        "r.rterm.windows": {
          "type": "string",
          "default": "C:\\Program Files\\R\\R-3.3.3\\bin\\x64\\Rterm.exe",
          "description": "R terms path for windows."
        },
        "r.rterm.mac": {
          "type": "string",
          "default": "/usr/local/bin/",
          "description": "R terms path for Mac OS X."
        },
        "r.rterm.linux": {
          "type": "string",
          "default": "/usr/bin/",
          "description": "R terms path for Linux."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^2.3.3",
    "typescript": "^2.2.2",
    "vscode": "^1.1.0"
  },
  "dependencies": {
    "fs": "0.0.1-security",
    "path": "^0.12.7",
    "tslint":"^5.1.0"
  }
}
