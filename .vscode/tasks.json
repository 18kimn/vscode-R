{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "compile",
        "--loglevel",
        "silent"
      ],
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "pretest",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "pretest"
      ],
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    }
  ]
}
